{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./social-icons.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "SocialIcons.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "color": {
        "order": 1,
        "title": "Color",
        "type": "string",
        "format": "color",
        "default": "auto"
      },
      "size": {
        "order": 2,
        "title": "Size",
        "type": "string",
        "enum": [
          "1em",
          "2em",
          "3em",
          "4em",
          "5em"
        ],
        "enumNames": {
          "1em": "Tiny",
          "2em": "Small",
          "3em": "Normal",
          "4em": "Large",
          "5em": "Huge"
        },
        "default": "3em"
      },
      "container": {
        "order": 3,
        "title": "Location",
        "description": "Select where you want the icons to be added to your site.",
        "type": "object",
        "format": "element"
      },
      "icons": {
        "order": 4,
        "title": "Icons",
        "description": "Check the icons youâ€™d like to add.",
        "type": "object",
        "properties": {
          "facebook": {
            "order": 1,
            "title": "Facebook",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": true
              },
              "username": {
                "showIf": {
                  "icons.facebook.enabled": true
                },
                "title": "Username",
                "description": "As in facebook.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "twitter": {
            "order": 2,
            "title": "Twitter",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "icons.twitter.enabled": true
                },
                "title": "Username",
                "description": "As in twitter.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "github": {
            "order": 3,
            "title": "Github",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "icons.github.enabled": true
                },
                "title": "Username",
                "description": "As in github.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "linkedin": {
            "order": 4,
            "title": "LinkedIn",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "icons.linkedin.enabled": true
                },
                "title": "Username",
                "description": "As in linkedin.com/in/<strong>username</strong>",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
